<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55B8AD"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="أذكار المسلم"
        android:textColor="#E0E0E0"
        android:textSize="50dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_mor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_centerInParent="true"
      android:layout_marginBottom="5dp"
        android:background="#FFFCFC"
        android:padding="15dp"
        android:text="أذكار الصباح"
        android:textColor="#00695C" />

    <Button
        android:id="@+id/btn_night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


android:layout_below="@+id/btn_mor"
        android:layout_centerInParent="true"

        android:background="#FCF4F4"
        android:padding="15dp"
        android:text="أذكار المساء"
        android:textColor="#00695C" />
</RelativeLayout>